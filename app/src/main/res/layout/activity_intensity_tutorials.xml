<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:background="@mipmap/very_low_01"
            android:id="@+id/imvRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/intensityVeryHigh"
                style="@style/text_card"
                android:layout_marginEnd="8dp"
                >

                <TextView
                    style="@style/text"
                    android:text="Very High"
                     />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/intensityHigh"
                style="@style/text_card"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/vib_500_text"
                    style="@style/text"
                    android:text="High" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/intensityMedium"
                style="@style/text_card"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/vib_200_text"
                    style="@style/text"
                    android:text="Medium" />
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/intensityLow"
                style="@style/text_card"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/vib_150_text"
                    style="@style/text"
                    android:text="Low" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/intensityVeryLow"
                style="@style/text_card"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/vib_now_text"
                    style="@style/text"
                    android:text="Very Low" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

