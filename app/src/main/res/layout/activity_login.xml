<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="match_parent">

    <np.TextView
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"
        style="@style/AppTheme.Lato_Bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="31sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey there!"
        android:id="@+id/textView7" />
    <np.EditText
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/edtUserName"
        android:textSize="15sp"
        android:padding="16dp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:background="@drawable/login_bg_edt"
        android:textColor="@color/white"
        style="@style/AppTheme.Lato_Regular"
        android:hint="Email Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <!-- <np.EditText
        android:inputType="textPassword"
        android:drawableRight="@mipmap/icon_password_show"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/edtPassword"
        android:textSize="15sp"
        android:padding="16dp"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_edttext"
        android:textColor="@color/white"
        style="@style/AppTheme.Lato_Regular"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <np.EditText
            android:inputType="textPassword"
            android:drawableRight="@mipmap/icon_password_show"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/edtPassword"
            android:textSize="15sp"
            android:padding="16dp"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:background="@drawable/login_bg_edt"
            android:textColor="@color/white"
            style="@style/AppTheme.Lato_Regular"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground"
            />
    </FrameLayout>

    <np.TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        style="@style/AppTheme.Lato_Bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
         />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/llLogin"
            style="@style/text_card"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/colorPrimaryAlert">

            <LinearLayout style="@style/icon_text_layout">

                <ImageView
                    style="@style/icon_when_text"
                    android:src="@mipmap/icon_login" />

                <TextView
                    style="@style/text_when_icon"
                    android:text="Log in"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/llRegistarion"
            style="@style/text_card"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/colorPrimaryAlert">

            <LinearLayout style="@style/icon_text_layout">

                <ImageView
                    style="@style/icon_when_text"
                    android:src="@mipmap/icon_register" />

                <TextView
                    style="@style/text_when_icon"
                    android:text="Register"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:weightSum="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <np.TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            style="@style/AppTheme.Lato_Bold"
            android:text="OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@mipmap/icon_facebook"
            android:id="@+id/imvFaceBook"
            android:layout_width="40dp"
            android:layout_marginRight="12dp"
            android:layout_height="40dp" />
        <ImageView
            android:background="@mipmap/icon_gmail"
            android:id="@+id/imvGmail"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:background="@mipmap/ab_lechal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
