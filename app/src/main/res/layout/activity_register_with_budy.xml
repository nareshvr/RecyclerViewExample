<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <np.TextView
        android:id="@+id/textView7"
        style="@style/AppTheme.Lato_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Register as a buddy"
        android:textColor="@color/white"
        android:textSize="31sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <np.TextView
            android:id="@+id/leftText"
            style="@style/AppTheme.Lato_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Please visit"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <np.TextView
            android:id="@+id/txtHyp"
            style="@style/AppTheme.Lato_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="www.lechal.com"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <np.TextView
            android:id="@+id/txtHyp1"
            style="@style/AppTheme.Lato_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtHyp"
            android:layout_marginLeft="90dp"
            android:gravity="right"
            android:padding="8dp"
            android:text="to purchase subscription of buddy service."
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <np.TextView

        style="@style/AppTheme.Lato_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="After purchase, you will receive a code
which activates your subscription."
        android:textColor="@color/white"
        android:textSize="15sp" />

    <np.EditText
        android:id="@+id/edtBuddy"
        style="@style/AppTheme.Lato_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_bg_edt"
        android:gravity="center"
        android:hint="Enter code here"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvFaceBook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="32dp"
            android:background="@mipmap/icon_fail" />

        <ImageView
            android:id="@+id/imvGmail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_sucess" />
    </LinearLayout>
</LinearLayout>
