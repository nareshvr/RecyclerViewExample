    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <np.EditText
            android:inputType="textPassword"
            android:drawableRight="@mipmap/icon_password_show"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/edtReBuddyPassword"
            android:textSize="15sp"
            android:padding="16dp"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:background="@drawable/login_bg_edt"
            android:textColor="@color/white"
            style="@style/AppTheme.Lato_Regular"
            android:hint="**********"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:clickable="true"
            android:id="@+id/btnBuddyRePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground"
            />
    </FrameLayout>

    <np.EditText
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/edtArthurWeasley"
        android:textSize="15sp"
        android:padding="16dp"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:background="@drawable/login_bg_edt"
        android:textColor="@color/white"
        style="@style/AppTheme.Lato_Regular"
        android:hint="Arthur Weasley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <np.TextView
            android:id="@+id/leftText"
            style="@style/AppTheme.Lato_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="By registering, I agree to the"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <np.TextView

            style="@style/AppTheme.Lato_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="28dp"
            android:padding="8dp"
            android:id="@+id/txtHyp"
            android:text="Terms of Use."
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvFaceBook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="32dp"
            android:background="@mipmap/icon_fail" />

        <ImageView
            android:id="@+id/imvGmail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_sucess" />
    </LinearLayout>
</LinearLayout>
