    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/edtReEnterPassword1"
    android:textSize="15sp"
    android:padding="16dp"
    android:gravity="center"
    android:textColorHint="@color/white"
