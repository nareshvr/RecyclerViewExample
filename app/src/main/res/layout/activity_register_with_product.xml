<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_transparent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <np.TextView
        android:layout_marginBottom="16dp"
        android:id="@+id/textView7"
        style="@style/AppTheme.Lato_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Register with product"
        android:textColor="@color/white"
        android:textSize="31sp" />

    <np.EditText
        android:id="@+id/edtUserName"
        style="@style/AppTheme.Lato_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_bg_edt"
        android:gravity="center"
        android:hint="Username"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />
    <!-- <np.EditText
         android:drawableRight="@mipmap/icon_password_show"
         android:layout_marginTop="8dp"
         android:layout_marginBottom="8dp"
         android:id="@+id/edtPassword"
         android:textSize="15sp"
         android:padding="16dp"
         android:inputType="textPassword"
         android:gravity="center"
         android:textColorHint="@color/white"
         android:background="@drawable/bg_edttext"
         android:textColor="@color/white"
         style="@style/AppTheme.Lato_Regular"
         android:hint="Password"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <np.EditText
            android:id="@+id/edtProductPassword"
            style="@style/AppTheme.Lato_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_bg_edt"
            android:drawableRight="@mipmap/icon_password_show"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground" />
    </FrameLayout>
    <!--<np.EditText
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/edtReEnterPassword"
        android:textSize="15sp"
        android:padding="16dp"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_edttext"
        android:textColor="@color/white"
        style="@style/AppTheme.Lato_Regular"
        android:hint="Re-enter Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <np.EditText
            android:id="@+id/edtReEnterPassword"
            style="@style/AppTheme.Lato_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_bg_edt"
            android:drawableRight="@mipmap/icon_password_show"
            android:gravity="center"
            android:hint="Re-enter Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnProRePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground" />
    </FrameLayout>

    <np.EditText
        android:id="@+id/edtFullname"
        style="@style/AppTheme.Lato_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_bg_edt"
        android:gravity="center"
        android:hint="Full name"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <np.TextView
            android:id="@+id/leftText"
            style="@style/AppTheme.Lato_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="By registering, I agree to the"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <np.TextView

            style="@style/AppTheme.Lato_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="28dp"
            android:padding="8dp"
            android:id="@+id/txtHyp"
            android:text="Terms of Use."
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvFaceBook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="32dp"
            android:background="@mipmap/icon_fail" />

        <ImageView
            android:id="@+id/imvGmail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_sucess" />
    </LinearLayout>
</LinearLayout>
