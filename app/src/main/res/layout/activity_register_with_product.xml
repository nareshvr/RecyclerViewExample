<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <np.TextView
        android:layout_marginBottom="16dp"
        android:id="@+id/textView7"
        style="@style/AppTheme.Lato_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Register with product"
        android:textColor="@color/white"
        android:textSize="31sp" />

    <np.EditText
        android:id="@+id/edtFirstName"
        style="@style/AppTheme.Lato_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_bg_edt"
        android:gravity="center"
        android:hint="First Name"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />
    <np.EditText
        android:id="@+id/edtLastName"
        style="@style/AppTheme.Lato_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_bg_edt"
        android:gravity="center"
        android:hint="Last Name"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />
    <np.EditText
        android:id="@+id/edtEmailId"
        style="@style/AppTheme.Lato_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_bg_edt"
        android:gravity="center"
        android:hint="Email Id"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <np.EditText
            android:id="@+id/edtProductPassword"
            style="@style/AppTheme.Lato_Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_bg_edt"
            android:drawableRight="@mipmap/icon_password_show"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <Button
            android:clickable="true"
            android:id="@+id/btnPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <np.TextView
            android:id="@+id/leftText"
            style="@style/AppTheme.Lato_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="By registering, I agree to the"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <np.TextView

            style="@style/AppTheme.Lato_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="28dp"
            android:padding="8dp"
            android:id="@+id/txtHyp"
            android:text="Terms of Use."
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvClear"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="32dp"
            android:background="@mipmap/icon_fail" />

        <ImageView
            android:id="@+id/imvSubmit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon_sucess" />
    </LinearLayout>
</LinearLayout>
