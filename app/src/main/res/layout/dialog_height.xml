<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryAlert"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <np.TextView
            android:id="@+id/textView18"
            style="@style/AppTheme.Lato_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Height"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llFeet"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <np.EditText
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            style="@style/AppTheme.Lato_Bold"
            android:textColor="@color/colorPrimaryAlert"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_edttext"
            android:id="@+id/edtFirst"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <np.EditText
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            style="@style/AppTheme.Lato_Bold"
            android:textColor="@color/colorPrimaryAlert"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_edttext"
            android:id="@+id/edtSecond"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        </LinearLayout>
        <np.EditText
            android:visibility="gone"
            android:gravity="center"
            android:inputType="numberDecimal"
            style="@style/AppTheme.Lato_Bold"
            android:textColor="@color/colorPrimaryAlert"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_edttext"
            android:id="@+id/edtCentimeters"
            android:layout_width="120dp"
            android:layout_height="60dp" />
        <Spinner
            android:id="@+id/spHeight"
            android:layout_width="150dp"
            android:layout_height="60dp" />


    </LinearLayout>
</LinearLayout>
