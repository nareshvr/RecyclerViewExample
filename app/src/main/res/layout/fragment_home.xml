<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ducere.lechal.pod.HomeFragment">

    <fragment
        android:id="@+id/mapfragment"
        class="com.here.android.mpa.mapping.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rlTransparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="@color/home_transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_bg_home_drawable">

                 <ImageView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/ic_search"
                    android:background="@drawable/edittext_search_icon_drawable"/>

            <np.TextView
                style="@style/AppTheme.Lato_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter destination"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llCurrentLoc">
            <np.TextView
                style="@style/AppTheme.Lato_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvW3w"
                android:layout_marginBottom="6dp"
                android:text="apple.orange.banana"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <np.TextView
                style="@style/AppTheme.Lato_Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLocName"
                android:text="Ducere Tech,"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="36sp"/>
            <np.TextView
                style="@style/AppTheme.Lato_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLocAddress"
                android:singleLine="true"
                android:text="West Marredpally"
                android:textColor="@color/white"
                android:textSize="36sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:id="@+id/viewLine"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/llCurrentLoc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="48dp"
            android:layout_below="@+id/viewLine">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">
                <np.TextView
                    style="@style/AppTheme.Lato_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily stepcount"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <ProgressBar
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="50"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <np.TextView
                    style="@style/AppTheme.Lato_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200"
                    android:textColor="@color/white"
                    android:textSize="36sp"/>
                <np.TextView
                    style="@style/AppTheme.Lato_Light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" steps"
                    android:textColor="@color/white"
                    android:textSize="36sp"/>
            </LinearLayout>

        </LinearLayout>
        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="56dp"
            android:layout_height="56dp"
            fab:menu_fab_size="normal"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/viewLine"
            fab:menu_colorNormal="@color/colorPrimary"
            fab:menu_colorPressed="@color/colorPrimary"
            fab:menu_colorRipple="#99FFFFFF"
            android:layout_marginBottom="-50dp"
            >
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cast_dark"
                fab:fab_size="mini"
                fab:fab_label="Menu item 1" />
            </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</RelativeLayout>
